@{
    ViewData["Title"] = "Home Page";
}

<!-- Masthead -->
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold">The Coder's Coffee Shop</h1>
                <hr class="divider my-5">
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 font-weight-light mb-5"> Welcome to the Coder's Coffee Shop <br> Made just for ISAD 251</p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="#services">Find Out More</a>
            </div>
        </div>
    </div>
</header>

<!-- Menu Section -->
<section class="page-section bg-img" id="menu">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="text-white text-center mt-0">Check out our menu!</h2>
                <hr class="divider my-5">
                <a class="btn btn-primary btn-xl js-scroll-trigger" asp-area="" asp-controller="CafeProducts" asp-action="Menu">Full Menu</a>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="page-section" id="services">
    <div class="container">
        <h2 class="text-center mt-0">About us</h2>
        <hr class="divider my-4">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-seedling text-primary mb-4"></i>
                    <h3 class="h4 mb-2">Best Beans</h3>
                    <p class="text-muted mb-0">We source 8 varieties of beans from over 12 countries</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-mug-hot text-primary mb-4"></i>
                    <h3 class="h4 mb-2">Quality Milk</h3>
                    <p class="text-muted mb-0">We use fresh milk to ensure that the customer gets the best taste</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-smile text-primary mb-4"></i>
                    <h3 class="h4 mb-2">Perfect Blend</h3>
                    <p class="text-muted mb-0">The highest standards are ensured to create your perfect coffee.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-heart text-primary mb-4"></i>
                    <h3 class="h4 mb-2">Made with Love</h3>
                    <p class="text-muted mb-0">Each coffee is served with a smile</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Photo section-->
<section id="portfolio">
    <div class="container-fluid p-0">
        <div class="row no-gutters">
            <div class="col-lg-4 col-sm-6">
                <a class="portfolio-box" href="~/images/fullsize/1.jpg">
                    <img class="img-fluid" src="~/images/thumbnails/1.jpg" alt="">
                    <div class="portfolio-box-caption"></div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a class="portfolio-box" href="~/images/fullsize/2.jpg">
                    <img class="img-fluid" src="~/images/thumbnails/2.jpg" alt="">
                    <div class="portfolio-box-caption"></div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a class="portfolio-box" href="~/images/fullsize/3.jpg">
                    <img class="img-fluid" src="~/images/thumbnails/3.jpg" alt="">
                    <div class="portfolio-box-caption"></div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a class="portfolio-box" href="~/images/fullsize/4.jpg">
                    <img class="img-fluid" src="~/images/thumbnails/4.jpg" alt="">
                    <div class="portfolio-box-caption"></div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a class="portfolio-box" href="~/images/fullsize/5.jpg">
                    <img class="img-fluid" src="~/images/thumbnails/5.jpg" alt="">
                    <div class="portfolio-box-caption"></div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a class="portfolio-box" href="~/images/fullsize/6.jpg">
                    <img class="img-fluid" src="~/images/thumbnails/6.jpg" alt="">
                    <div class="portfolio-box-caption p-3"></div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="page-section" id="contact">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="mt-0">Contact us!</h2>
                <hr class="divider my-4">
                <p class="text-muted mb-5">Get in touch via our phone or email services</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 ml-auto text-center mb-5 mb-lg-0">
                <i class="fas fa-phone fa-3x mb-3 text-muted"></i>
                <div>+(000) 111 222 333</div>
            </div>
            <div class="col-lg-4 mr-auto text-center">
                <i class="fas fa-envelope fa-3x mb-3 text-muted"></i>
                <a class="d-block">address@domain.co.uk</a>
            </div>
        </div>
    </div>
</section>
