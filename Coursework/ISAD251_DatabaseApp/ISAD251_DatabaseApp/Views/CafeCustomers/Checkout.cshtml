@model CafeCustomers

@{
    ViewData["Title"] = "Checkout";
}

<header class="bg-img-2">
    <div class="container">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-center text-white font-weight-bold">Your info</h1>
            </div>
        </div>
    </div>
</header>

<div class="container h-100 ex1">
    <div class="row"><h3 class="text-center">Please enter the fields below to confirm your order</h3></div>
    <form asp-action="Checkout" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label asp-for="CustFirstName" class="col-md-2 control-label">First Name</label>
            <div class="col-md-5">
                <input asp-for="CustFirstName" class="form-control" />
                <span asp-validation-for="CustFirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CustSurName" class="col-md-2 control-label">Last Name</label>
            <div class="col-md-5">
                <input asp-for="CustSurName" class="form-control" />
                <span asp-validation-for="CustSurName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-8">
                <p class="button">
                    <input class="btn btn-success" type="submit" value="Complete order" />
                </p>
            </div>
        </div>
    </form>
</div>
