@model ISAD251_DatabaseApp.Models.CafeCustomers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create Customer</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group border-1">
                <label class="control-label ">First Name</label>
                <input asp-for="CustFirstName" class="form-control border1" />
                <span asp-validation-for="CustFirstName" class="text-danger"></span>
            </div>
            <div class="form-group border-1">
                <label class="control-label ">Last Name</label>
                <input asp-for="CustSurName" class="form-control border1" />
                <span asp-validation-for="CustSurName" class="text-danger"></span>
            </div>
            <div class="form-group margin">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="margin" asp-area="" asp-controller="Admin" asp-action="Customer">Back to List</a>
</div>

@{
    if (ViewBag.success != null)
    {
        <div class="row margin">
            <div class="col-sm-2">
                <div class="card bg-success mb-3">
                    <div class="card-header bg-success text-center text-white">Customer successfully created</div>
                </div>
            </div>
        </div>
    }
}