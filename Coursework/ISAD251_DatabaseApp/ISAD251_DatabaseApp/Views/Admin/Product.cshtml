@model IEnumerable<ISAD251_DatabaseApp.Models.CafeProducts>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Products</h2>

<p>
    <a asp-action="CreateProduct">Create New Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Type
            </th>
            <th>
                Price
            </th>
            <th>
                Name
            </th>
            <th>
                Calories
            </th>
            <th>
                Details
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
         {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCalories)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDetails)
                </td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@item.ProductId">Edit</a> |
                    <a asp-action="DeleteProduct" asp-route-id="@item.ProductId">Delete</a>
                </td>
            </tr>
         }
    </tbody>
</table>
