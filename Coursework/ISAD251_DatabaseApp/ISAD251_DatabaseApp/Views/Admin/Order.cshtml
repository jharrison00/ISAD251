@model IEnumerable<ISAD251_DatabaseApp.Models.CafeOrders>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Order Date
            </th>
            <th>
                Total Price
            </th>
            <th>
                Customer Id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)                  
                </td>
                <td>
                    £@Html.DisplayFor(modelItem => item.OrderTotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cust.CustId)
                </td>
            </tr>
        }
    </tbody>
</table>
